package rules

import tercerhombre.personaje.Personaje;
import tercerhombre.propiedades.*;
import tercerhombre.consultas.Modificador;

rule "modificador EstadoSalud"
agenda-group "g5"
agenda-group "g4"
agenda-group "g3"
agenda-group "g2"
agenda-group "g1"
agenda-group "g0"
salience 1
no-loop true
    when
    	m : Modificador( error == false, tipo.equals(EstadoSalud.class) )
    	p : Personaje( nombre == Personaje.karl, modificado == false )
    then
    	modify(p){
    		setEstadoSalud((EstadoSalud)m.getPropiedad()).
    		setModificado(true);
    	};    	
    	
    	System.out.println("estado salud");
end

rule "modificador Nacionalidad"
agenda-group "g5"
agenda-group "g4"
agenda-group "g3"
agenda-group "g2"
agenda-group "g1"
agenda-group "g0"
salience 1
no-loop true
	when
		m : Modificador( error == false, tipo.equals(Nacionalidad.class) )
		p : Personaje( nombre == m.getNombre(), modificado == false )
	then
		modify(p){
    		setNacionalidad((Nacionalidad)m.getPropiedad()).
    		setModificado(true);
    	};
		System.out.println("nacionalidad"); 
end
